<div class="row">
  <div class="col-sm-12">
    <form id="static-form" method="post">
	  <div class="form-group">
        <label for="String1">Paragraph:</label>
        <textarea class="form-control" id="String1" name="String1" placeholder="Enter your story here.." rows="4"> </textarea>
      </div>

	  <div class="form-group">
        <label for="String2">Data To Insert</label>
        <input type="text" class="form-control" id="String2" name="String2" placeholder="Data To Insert">
      </div>

      <div class="form-group">
        <label for="number1">Frequency of String:</label>
        <input type="number" class="form-control" id="number1" name="number1" placeholder="Frequency of String:">
      </div>

      <div class="form-group">
        <label for="number2">Character Count:</label>
        <input type="number" class="form-control" id="number2" name="number2" placeholder="Character Count:">
      </div>
      
      <div class="form-group hidden" id="error-container">
        <div class="alert alert-danger text-goes-here">
        </div>
      </div>
      
      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>

      <div class="form-group hidden" id="result-container">
        <div class="alert alert-success text-goes-here">
        </div>
      </div>
      
    </form>
  </div>
</div>
